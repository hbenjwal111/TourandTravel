<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/cb_grey">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="@dimen/dimen_10dp"
            app:cardBackgroundColor="@color/light_white"
            app:cardCornerRadius="@dimen/dimen_1dp"
            app:cardElevation="@dimen/dimen_8dp"
            app:cardPreventCornerOverlap="false"
            app:contentPaddingBottom="@dimen/dimen_10dp"

            app:contentPaddingTop="@dimen/dimen_10dp"
            card_view:cardElevation="@dimen/dimen_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15dp"
                    android:gravity="left|center_horizontal|center_vertical"
                    android:text="HOTEL DETAILS"
                    android:textColor="#2F4F4F"
                    android:textSize="@dimen/text_medium" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="#c0c0c0"/>


                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="horizontal"
                    >


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_gravity="left|center_horizontal|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/dimen_15dp"



                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="normal"
                    android:typeface="sans"
                    android:id="@+id/tv_text"
                    android:layout_toRightOf="@+id/image"
                    android:layout_marginLeft="15dp"
                    />
                </RelativeLayout>

                <View
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="#c0c0c0"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                   android:layout_marginTop="@dimen/dimen_20dp" >




                    <TextView
                        android:id="@+id/checkIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:text="CheckIn"
                        android:textSize="@dimen/text_large"
                        android:textColor="#2F4F4F"
                        android:textStyle="normal"
                        android:typeface="sans"
                        android:gravity="center"

                        android:layout_weight="1" />







                    <TextView
                        android:id="@+id/checkOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:text="CheckOut"
                        android:textSize="@dimen/text_large"
                        android:textColor="#2F4F4F"
                        android:textStyle="normal"
                        android:typeface="sans"


                        android:gravity="center"
                        android:layout_weight="1" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >




                        <TextView
                            android:id="@+id/fromDtae"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollHorizontally="false"
                            android:text="10\0\00"
                            android:editable="false"
                            android:inputType="date"

                            android:textSize="@dimen/text_large"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:typeface="sans"
                            android:gravity="center"

                            android:layout_weight="1" />



                        <TextView
                            android:id="@+id/toDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollHorizontally="false"
                            android:text="10\0\0\0"
                            android:inputType="date"
                            android:editable="false"

                            android:textSize="@dimen/text_large"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:typeface="sans"

                            android:gravity="center"
                            android:layout_weight="1" />

                    </LinearLayout>




                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginTop="@dimen/dimen_20dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#c0c0c0"
                        />



                    <TextView
                        android:id="@+id/check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:text="preium room"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:typeface="sans"
                        android:layout_marginLeft="@dimen/dimen_15dp"


                        android:gravity="left|center_horizontal|center_vertical"
                        android:layout_weight="1" />

                    <View
                        android:layout_below="@+id/check"
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#c0c0c0"/>


                    <TextView
                        android:id="@+id/ruu"
                        android:layout_below="@+id/check"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:text="2 room"
                        android:textSize="@dimen/text_medium"
                        android:textColor="@color/cardview_dark_background"
                        android:textStyle="normal"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:typeface="sans"
                        android:layout_marginLeft="@dimen/dimen_20dp"


                        android:gravity="left|center_horizontal|center_vertical"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/ru"
                        android:layout_below="@+id/ruu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:text="2 guest"
                        android:layout_marginLeft="@dimen/dimen_20dp"
                        android:textSize="@dimen/text_medium"
                        android:textColor="@color/cardview_dark_background"
                        android:textStyle="normal"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:typeface="sans"



                        android:gravity="left|center_horizontal|center_vertical"
                        android:layout_weight="1" />




</RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="@dimen/dimen_10dp"
                app:cardBackgroundColor="@color/light_white"
                app:cardCornerRadius="@dimen/dimen_1dp"
                app:cardElevation="@dimen/dimen_8dp"
                app:cardPreventCornerOverlap="false"
                app:contentPaddingBottom="@dimen/dimen_10dp"

                app:contentPaddingTop="@dimen/dimen_10dp"
                card_view:cardElevation="@dimen/dimen_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                   >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAYMENT DETAILS"
                        android:layout_marginLeft="@dimen/dimen_15dp"
                        android:textColor="#2F4F4F"
                        android:textSize="@dimen/text_medium"
                        android:gravity="left|center_vertical|center_horizontal"
                        />








                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_20dp" >


                        <TextView
                            android:id="@+id/pay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_15dp"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical|center_horizontal"
                            android:scrollHorizontally="false"
                            android:singleLine="true"
                            android:text="Room Charges "
                            android:layout_marginBottom="@dimen/dimen_7dp"

                            android:textColor="@color/black"
                            android:textSize="@dimen/text_large"
                            android:textStyle="normal"
                            android:typeface="sans" />


                        <TextView
                            android:id="@+id/gst"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollHorizontally="false"
                            android:text="2000"
                            android:layout_marginBottom="@dimen/dimen_7dp"

                            android:textSize="@dimen/text_large"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:layout_marginRight="@dimen/dimen_15dp"
                            android:typeface="sans"
                            android:gravity="right|center_vertical|center_horizontal"
                            android:layout_weight="1" />



                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#c0c0c0"
                        />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_20dp" >






                        <TextView
                            android:id="@+id/paynow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollHorizontally="false"
                            android:text="GST on Room Charges"
                            android:textSize="@dimen/text_large"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:typeface="sans"
                            android:layout_marginBottom="@dimen/dimen_7dp"
                            android:layout_marginLeft="@dimen/dimen_15dp"
                            android:gravity="left|center_vertical|center_horizontal"
                            android:layout_weight="1" />










                        <TextView
                            android:id="@+id/charges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollHorizontally="false"
                            android:text="2000"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:layout_marginBottom="@dimen/dimen_7dp"


                            android:layout_marginRight="@dimen/dimen_15dp"
                            android:typeface="sans"
                            android:gravity="right|center_vertical|center_horizontal"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="#c0c0c0"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dimen_20dp" >




                        <TextView
                            android:id="@+id/total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollHorizontally="false"
                            android:text="Pay Now"
                            android:textSize="@dimen/text_large"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:layout_marginBottom="@dimen/dimen_5dp"

                            android:textStyle="bold"
                            android:typeface="sans"
                            android:layout_marginLeft="@dimen/dimen_15dp"
                            android:gravity="left|center_vertical|center_horizontal"
                            android:layout_weight="1" />










                        <TextView
                            android:id="@+id/totalPay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollHorizontally="false"
                            android:text="4000"
                            android:textSize="@dimen/text_large"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/dimen_5dp"

                            android:layout_marginRight="@dimen/dimen_15dp"
                            android:typeface="sans"
                            android:gravity="right|center_vertical|center_horizontal"
                            android:layout_weight="1" />

                    </LinearLayout>









                </LinearLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
 >



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/choose"
                    android:gravity="center"
                    android:background="@drawable/top_bar_gradient"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="1"
                    android:text="Pay Now"
                    android:textColor="@color/white"
                    android:typeface="sans"
                    android:textSize="@dimen/text_medium"
                    android:textStyle="normal"

                    />

            </RelativeLayout>





</LinearLayout>





        </LinearLayout>


    </LinearLayout>



