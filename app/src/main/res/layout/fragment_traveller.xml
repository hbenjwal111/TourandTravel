<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/cb_grey">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            app:cardBackgroundColor="@color/light_white"
            app:cardCornerRadius="@dimen/dimen_1dp"
            app:cardElevation="@dimen/dimen_8dp"
            app:cardPreventCornerOverlap="false"
            app:contentPaddingBottom="@dimen/dimen_10dp"

            app:contentPaddingTop="@dimen/dimen_10dp"
            card_view:cardElevation="@dimen/dimen_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_25dp"
                    android:gravity="left|center_horizontal|center_vertical"
                    android:text="Traveller Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp"
                    >

                    <EditText
                        android:textSize="@dimen/text_medium"
                        android:id="@+id/fullNameEt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginTop="10dp"
                        android:textStyle="normal"

                        android:windowSoftInputMode="stateHidden"
                        android:gravity="left|center"


                        android:typeface="sans"

                        android:hint="Traveller Name"
                        android:inputType="text"

                        />


                </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_15dp"

            app:cardBackgroundColor="@color/light_white"
            app:cardCornerRadius="@dimen/dimen_1dp"
            app:cardElevation="@dimen/dimen_8dp"
            app:cardPreventCornerOverlap="false"
            app:contentPaddingBottom="@dimen/dimen_10dp"

            app:contentPaddingTop="@dimen/dimen_10dp"
            card_view:cardElevation="@dimen/dimen_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/traveller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_25dp"
                    android:gravity="left|center_horizontal|center_vertical"
                    android:text="Contact Details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp"
                    >

                    <EditText
                        android:textSize="@dimen/text_medium"
                        android:id="@+id/mobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginTop="10dp"
                        android:textStyle="normal"

                        android:windowSoftInputMode="stateHidden"
                        android:gravity="left|center"


                        android:typeface="sans"

                        android:hint="Mobile Number"
                        android:inputType="text"

                        />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp"
                    >

                    <EditText
                        android:textSize="@dimen/text_medium"
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginTop="10dp"
                        android:textStyle="normal"

                        android:windowSoftInputMode="stateHidden"
                        android:gravity="left|center"


                        android:typeface="sans"

                        android:hint="Email"
                        android:inputType="text"

                        />


                </android.support.design.widget.TextInputLayout>










            </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_15dp"

            app:cardBackgroundColor="@color/light_white"
            app:cardCornerRadius="@dimen/dimen_1dp"
            app:cardElevation="@dimen/dimen_8dp"
            app:cardPreventCornerOverlap="false"
            app:contentPaddingBottom="@dimen/dimen_10dp"

            app:contentPaddingTop="@dimen/dimen_10dp"
            card_view:cardElevation="@dimen/dimen_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_25dp"
                    android:gravity="left|center_horizontal|center_vertical"
                    android:text="Select Your Profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_medium" />

                <RadioGroup
                    android:id="@+id/radio_grp_env"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_5dp"
                    android:paddingRight="@dimen/dimen_5dp">


                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/radio_btn_sandbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="@integer/int_1"
                        android:text="Personal"
                        android:textColor="@color/payumoney_black" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/radio_btn_production"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="@integer/int_1"
                        android:checked="true"
                        android:text="Corporate" />


                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/radio_btn_sand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="@integer/int_1"
                        android:text="Education"
                        android:textColor="@color/payumoney_black" />


                </RadioGroup>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp"
                   android:visibility="gone" >

                    <EditText
                        android:textSize="@dimen/text_medium"
                        android:id="@+id/mobileNum"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginTop="10dp"
                        android:textStyle="normal"

                        android:windowSoftInputMode="stateHidden"
                        android:gravity="left|center"


                        android:typeface="sans"

                        android:hint="Company Name"
                        android:inputType="text"

                        />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp"
                    android:visibility="gone" >

                    <EditText
                        android:textSize="@dimen/text_medium"
                        android:id="@+id/emailBusiness"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginTop="10dp"
                        android:textStyle="normal"

                        android:windowSoftInputMode="stateHidden"
                        android:gravity="left|center"


                        android:typeface="sans"

                        android:hint="Company Address"
                        android:inputType="text"

                        />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp"
                    android:visibility="gone" >

                    <EditText
                        android:textSize="@dimen/text_medium"
                        android:id="@+id/emailBusinessEmail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginTop="10dp"
                        android:textStyle="normal"

                        android:windowSoftInputMode="stateHidden"
                        android:gravity="left|center"


                        android:typeface="sans"

                        android:hint="Business Email"
                        android:inputType="text"

                        />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputBusinessNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp"
                    android:visibility="gone" >

                    <EditText
                        android:textSize="@dimen/text_medium"
                        android:id="@+id/emailBusinessNumber"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginTop="10dp"
                        android:textStyle="normal"

                        android:windowSoftInputMode="stateHidden"
                        android:gravity="left|center"


                        android:typeface="sans"

                        android:hint="Company Phone Number"
                        android:inputType="text"

                        />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp"
                    android:visibility="gone">

                    <EditText
                        android:textSize="@dimen/text_medium"
                        android:id="@+id/input_edu"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginTop="10dp"
                        android:textStyle="normal"

                        android:windowSoftInputMode="stateHidden"
                        android:gravity="left|center"


                        android:typeface="sans"

                        android:hint="College Name"
                        android:inputType="text"

                        />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp"
                    android:visibility="gone">

                    <EditText
                        android:textSize="@dimen/text_medium"
                        android:id="@+id/emailCollege"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginTop="10dp"
                        android:textStyle="normal"

                        android:windowSoftInputMode="stateHidden"
                        android:gravity="left|center"


                        android:typeface="sans"

                        android:hint="College Phone Number"
                        android:inputType="text"

                        />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputCollege"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp"
                    android:visibility="gone" >

                    <EditText
                        android:textSize="@dimen/text_medium"
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginTop="10dp"
                        android:textStyle="normal"

                        android:windowSoftInputMode="stateHidden"
                        android:gravity="left|center"


                        android:typeface="sans"

                        android:hint="College Address"
                        android:inputType="text"

                        />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/collegeEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="5dp"
                    android:visibility="gone">

                    <EditText
                        android:textSize="@dimen/text_medium"
                        android:id="@+id/collegeemail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"

                        android:layout_marginTop="10dp"
                        android:textStyle="normal"

                        android:windowSoftInputMode="stateHidden"
                        android:gravity="left|center"


                        android:typeface="sans"

                        android:hint="College Email"
                        android:inputType="text"

                        />


                </android.support.design.widget.TextInputLayout>








            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_15dp"

                app:cardBackgroundColor="@color/light_white"
                app:cardCornerRadius="@dimen/dimen_1dp"
                app:cardElevation="@dimen/dimen_8dp"
                app:cardPreventCornerOverlap="false"
                app:contentPaddingBottom="@dimen/dimen_10dp"

                app:contentPaddingTop="@dimen/dimen_10dp"
                card_view:cardElevation="@dimen/dimen_8dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >




                    <TextView
                        android:id="@+id/checkIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Amount Payable"
                        android:textSize="@dimen/text_medium"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:typeface="sans"
                        android:gravity="left|center_horizontal|center_vertical"
                        android:layout_marginLeft="@dimen/dimen_25dp"

                        android:layout_weight="1" />




                    <TextView
                        android:id="@+id/checkOut"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollHorizontally="false"
                        android:text="2000"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/black"
                        android:textStyle="normal"
                        android:typeface="sans"

                        android:layout_marginRight="@dimen/dimen_25dp"


                        android:gravity="right|center_horizontal|center_vertical"
                        android:layout_weight="1" />

                </LinearLayout>



            </RelativeLayout>

            </android.support.v7.widget.CardView>




            <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/choose"
            android:gravity="center"
            android:background="@drawable/top_bar_gradient"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:text="Continue"
            android:textColor="@color/white"
            android:typeface="sans"
            android:textSize="@dimen/text_medium"
            android:textStyle="normal"

            />

    </RelativeLayout>








    </LinearLayout>

        </LinearLayout>

    </LinearLayout>